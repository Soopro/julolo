{
  "release": {
    "clean": ["dist", "build"],
    "render": {
      "cwd": "src",
      "dest": "build"
    },
    "copy": [
      {
        "name": "dist",
        "src": [
          "**/*",
          "!**/_*",
          "!_*"
        ],
        "cwd": "build",
        "dest": "dist"
      }
    ],
    "replace": {
      "src": [
        "app.json",
        "app.wxss"
      ],
      "cwd": "dist",
      "replacing": [
        {
          "from": "#ffb74d",
          "to": "#5c6bc0"
        },
        {
          "from": "#ed70b0",
          "to": "#f06292"
        },
        {
          "from": "#ffe7c3",
          "to": "#c5cae9"
        }
      ]
    },
    "scrap": {
      "src": [
        "*",
        "!*.html",
        "!*.min.*",
        "!conf.js",
        "!*.png",
        "!*.jpg",
        "!*.svg",
        "!*.ttf",
        "!*.woff*"
      ],
      "cwd": "dist"
    },
    "rev": {
      "src": "*.html",
      "cwd": "dist",
      "find": "?md5=<rev>"
    }
  }
}