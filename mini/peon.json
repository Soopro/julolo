{
  "watch":{
    "cwd": "src",
    "dest": "build",
    "clean": true,
    "server": true,
    "port": 9696,
    "render_aliases": {
      "lwxss": {
        "type": "less",
        "ext": "wxss"
      },
      "wxml": {
        "type": "html",
        "ext": "wxml"
      }
    }
  },
  "release": {
    "clean": ["dist", "build"],
    "render": {
      "cwd": "src",
      "dest": "build",
      "render_aliases": {
        "lwxss": {
          "type": "less",
          "ext": "wxss"
        },
        "wxml": {
          "type": "html",
          "ext": "wxml"
        }
      }
    },
    "copy": [
      {
        "name": "dist",
        "src": [
          "**/*",
          "!**/_*",
          "!_*"
        ],
        "cwd": "build",
        "dest": "dist"
      }
    ],
    "replace": {
      "src": [
        "app.json",
        "app.wxss"
      ],
      "cwd": "dist",
      "replacing": [
        {
          "from": "#ffb74d",
          "to": "#5c6bc0"
        },
        {
          "from": "#ed70b0",
          "to": "#f06292"
        },
        {
          "from": "#ffe7c3",
          "to": "#c5cae9"
        }
      ]
    }
  }
}