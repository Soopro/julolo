{
  "watch":{
    "cwd": "src",
    "dest": "build",
    "clean": true,
    "server": true,
    "port": 9696,
    "render_aliases": {
      "lwxss": {
        "type": "less",
        "ext": "wxss"
      },
      "wxml": {
        "type": "html",
        "ext": "wxml"
      }
    }
  },
  "release": {
    "clean": ["dist", "build"],
    "render": {
      "cwd": "src",
      "dest": "build",
      "render_aliases": {
        "lwxss": {
          "type": "less",
          "ext": "wxss"
        },
        "wxml": {
          "type": "html",
          "ext": "wxml"
        }
      }
    },
    "copy": [
      {
        "name": "dist",
        "src": [
          "**/*",
          "!**/_*",
          "!_*"
        ],
        "cwd": "build",
        "dest": "dist"
      }
    ],
    "compress": [
      {
        "type": "js",
        "cwd": "dist",
        "src": "app.js",
        "beautify": false,
        "output": "app.js"
      },
      {
        "type": "js",
        "cwd": "dist",
        "src": "config.js",
        "beautify": false,
        "output": "config.js"
      },
      {
        "type": "js",
        "cwd": "dist",
        "src": "core.js",
        "beautify": false,
        "mangle_js": false,
        "output": "core.js"
      },
      {
        "type": "js",
        "cwd": "dist",
        "src": "decorators.js",
        "beautify": false,
        "output": "decorators.js"
      },
      {
        "type": "js",
        "cwd": "dist",
        "src": "utils.js",
        "beautify": false,
        "output": "utils.js"
      }
    ],
    "replace": {
      "src": [
        "app.json",
        "app.wxss",
        "config.js"
      ],
      "cwd": "dist",
      "replacing": [
        {
          "name": "color-primary",
          "from": "#ffb74d",
          "to": "#5c6bc0"
        },
        {
          "name": "color-primary-dark-10",
          "from": "#ffa21a",
          "to": "#4553a4"
        },
        {
          "name": "color-primary-dark-20",
          "from": "#e68900",
          "to": "#35428e"
        },
        {
          "name": "color-accent",
          "from": "#ed70b0",
          "to": "#f06292"
        },
        {
          "name": "color-accent-10",
          "from": "#e74397",
          "to": "#e15886"
        },
        {
          "name": "color-accent-20",
          "from": "#db1c7e",
          "to": "#c94974"
        },
        {
          "name": "color-selected-text",
          "from": "#ffe7c3",
          "to": "#c5cae9"
        },
        {
          "name": "api-url",
          "from": "https://api.julolo.com",
          "to": "https://api.ashvsash.vip"
        },
        {
          "name": "app-title",
          "from": "✦ 导购犬哈阳酥 ✦",
          "to": "爱汇券"
        }
      ]
    }
  }
}