<!-- posters -->
<view class="cover square"
      wx:if="{{!item.figures}}">
  <image src="{{item.src}}"
         background-size="cover"
         background-position="center center"/>
</view>
<view class="showreel square"
      wx:else>
  <swiper indicator-dots="true"
          autoplay="true"
          circular="true">
    <swiper-item>
      <image src="{{item.src}}"
             background-size="cover"
             background-position="center center"/>
    </swiper-item>
    <block wx:for="{{item.figures}}"
           wx:for-item="pic"
           wx:key="index">
      <swiper-item>
        <image src="{{pic}}"
               background-size="cover"
               background-position="center center"/>
      </swiper-item>
    </block>
  </swiper>
</view>

<!-- product -->
<view class="article"
      wx:if="{{item}}">
  <text class="headline clamp"
        selectable="true">{{item.title}}</text>

  <view class="flex-row"
        wx:if="{{item.price}}">
    <text class="p price flex">¥ {{item.price}}</text>
    <text class="p draft"
          wx:if="{{item.volume > 0}}">月销 {{item.volume}}</text>
    <text class="p draft"
          wx:else>新品</text>
  </view>

  <view class="divider thin"></view>

  <view class="flex-row info">
    <image class="tmall"
           src="{{image.tmall}}"
           wx:if="{{item.type == 1}}"/>
    <text class="p flex text-nowrap">{{item.shop_title}}</text>
    <text class="p draft"
          wx:if="{{item.end_time}}">结束 {{item.end_time}}</text>
    <text class="p draft"
          wx:else>长期优惠</text>
  </view>

  <block wx:if="{{item.description}}">
    <view class="divider thin"></view>
    <view class="info">
      <text class="p">{{item.description}}</text>
    </view>
  </block>
</view>

<view class="buyer-holder"></view>

<!-- buy -->
<view class="buyer"
      wx:if="{{item}}">
  <view class="flex-row">
    <text class="coupon flex {{item.is_remote ? 'draft' : 'accent'}}"
          wx:if="{{item.coupon_info}}">{{item.coupon_info}}</text>
    <text class="coupon draft flex"
          wx:else>{{'无需用券'}}</text>
    <block wx:if="{{item.url}}">
      <button class="add-to-cart"
              bind:tap="try_to_buy"
              data-title="提示"
              data-content="「凑合买」的是为了弥补宝贝总数不够的缺憾，由系统自动匹配，它没有经过导购优选，需要您自行甄别优劣。请问您还是要去买吗？"
              data-confirm-text="对，就买"
              data-cancel-text="不买了"
              wx:if="{{item.is_remote}}">
        <image class="ico" src="{{image.coupon}}" />
        <text>凑合买!</text>
      </button>
      <button class="add-to-cart"
              type="accent"
              bind:tap="buy"
              wx:else>
        <image class="ico" src="{{image.coupon}}" />
        <text>领券买!</text>
      </button>
    </block>
    <block wx:else>
      <button class="add-to-cart"
              type="warn">
        <image class="ico" src="{{image.coupon}}" />
        <text>买不了...</text>
      </button>
    </block>
  </view>
</view>
