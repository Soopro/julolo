<!-- promotion -->
<view class="showreel"
      wx:if="{{promotions.length > 0}}">
  <swiper indicator-dots="true"
          autoplay="true"
          circular="true">
    <block wx:for="{{promotions}}"
           wx:key="index">
      <swiper-item>
        <image src="{{item.src}}"
               background-size="cover"
               background-position="center center"/>
      </swiper-item>
    </block>
  </swiper>
</view>

<!-- categories -->
<scroll-view class="menu menu-horiz"
             scroll-x
             wx:if="{{categories.length > 0}}">
  <view class="menu-item"
        wx:for="{{categories}}"
        wx:key="index">
    <button plain>
      <image src="{{item.src}}"
             mode="aspectFill" />
      <text>{{item.label}}</text>
    </button>
  </view>
</scroll-view>

<!-- ads -->
<view class="container"
      wx:if="{{banner.id}}">
  <view class="cover ribbon">
    <image src="{{banner.src}}" mode="aspectFill"/>
  </view>
</view>

<!-- coupons -->
<view class="section-header">
  <text class="hint">❀ 价钱便宜量又足 ❀</text>
</view>
<view class="grid-list">
  <view class="grid"
        wx:for="{{coupons}}"
        wx:key="index">
    <view class="card"
          bind:tap="enter"
          data-item="{{item}}">
      <image src="{{item.src}}"
             mode="aspectFill"
             lazy-load></image>
      <view class="card-text">
        <text class="title">{{item.title}}</text>
        <view class="info">
          <text class="coupon">{{item.coupon}}</text>
          <text class="price">¥ {{item.price}}</text>
        </view>
      </view>
    </view>
  </view>
</view>


<!-- footer -->
<view class="footer"
      wx:if="{{coupons.length > 0}}">
  <import src="/widgets/loadmore.wxml"/>
  <template is="loadmore" data="{{loading: is_loading, more: has_more}}"/>
</view>
