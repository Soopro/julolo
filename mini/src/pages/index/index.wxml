<!-- promotions -->
<view class="showreel"
      wx:if="{{promotions.length > 0}}">
  <swiper indicator-dots="true"
          autoplay="true"
          circular="true">
    <block wx:for="{{promotions}}"
           wx:for-item="promo"
           wx:key="index">
      <swiper-item data-promo="{{promo}}"
                   bind:tap="enter_promo">
        <image src="{{promo.src}}"
               background-size="cover"
               background-position="center center"/>
      </swiper-item>
    </block>
  </swiper>
</view>

<!-- categories -->
<view class="menu menu-horiz"
      wx:if="{{categories.length > 0}}">
  <scroll-view class="menu-inner"
               scroll-x>
    <view class="menu-item"
          wx:for="{{categories}}"
          wx:for-item="cat"
          wx:key="index">
      <button plain
              data-category="{{cat}}"
              bind:tap="enter_category">
        <image src="{{cat.icon}}"
               mode="aspectFill" />
        <text>{{cat.label}}</text>
      </button>
    </view>
  </scroll-view>
  <view class="arrow-left"
        wx:if="{{categories.length > 4}}"></view>
  <view class="arrow-right"
        wx:if="{{categories.length > 4}}"></view>
</view>


<!-- shortcuts -->
<block wx:if="{{shortcuts.length > 0}}">
  <view class="container"
        wx:for="{{shortcuts}}"
        wx:for-item="shortcut"
        wx:key="index">
    <image src="{{shortcut.src}}"
           mode="widthFix"
           data-shortcut="{{shortcut}}"
           bind:tap="enter_shortcut" />
  </view>
</block>


<!-- newest -->
<block wx:if="{{commodities.length > 0}}">
  <view class="section-divider">
    <text class="primary">❀ 精选上新 ❀</text>
  </view>
  <view class="grid-list">
    <view class="{{(index==0 && commodities.length%2) ? 'grid-head': 'grid'}}"
          wx:for="{{commodities}}"
          wx:key="index">
      <view class="card"
            bind:tap="enter"
            data-item="{{item}}">
        <image src="{{item.src}}" mode="aspectFill" lazy-load/>
        <view class="card-text">
          <text class="title">{{item.title}}</text>
          <view class="info">
            <text class="coupon">{{item.coupon}}</text>
            <text class="price">¥ {{item.price}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>
</block>


<!-- footer -->
<view class="footer"
      wx:if="{{commodities.length > 0}}">
  <import src="/widgets/loadmore.wxml"/>
  <template is="loadmore" data="{{loading: is_loading, more: has_more}}"/>
</view>
